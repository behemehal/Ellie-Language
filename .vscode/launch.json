          "test",
          "--no-run",
          "--bin=ellie_engine",
          "--package=ellie_engine"
        ],
        "filter": {
          "name": "ellie_engine",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
